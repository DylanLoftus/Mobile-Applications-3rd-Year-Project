<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:map"
             x:Class="map.MainPage">
    
    <ContentPage.Content>
        <Grid BackgroundColor="#db2e2e">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0" HorizontalOptions="Center" Margin="5,50,5,70">
                <Label Text="Recipes For You" FontSize="Large"  FontAttributes="Bold"></Label>
            </StackLayout>

            <StackLayout Grid.Row="1" HorizontalOptions="Center" Margin="5">
                <Image Source="Images/mainicon.png"></Image>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="Center" Margin="5,75,5,0">
                <Button Text="Enter" Clicked="Button_Clicked" Padding="10"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
